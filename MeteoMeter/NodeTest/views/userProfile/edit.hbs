
<div class="container-fluid form-horizontal">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-title">
    <h4>UserProfile - Edit Form</h4>
          </div>
      <div class="card-body">
    <form action="/userprofile/edit/{{_id}}" method="post">
    
    
    <div class="form-group row">
        <label for="userId" class ="col-sm-2 col-form-label">User Id</label>
        <div class="col-sm-10">
            <input type="text" id="userId" name="userId" class="form-control" value="{{userId}}">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="job" class ="col-sm-2 col-form-label">Job</label>
        <div class="col-sm-10">
            <input type="text" id="job" name="job" class="form-control" value="{{job}}">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="department" class ="col-sm-2 col-form-label">Department</label>
        <div class="col-sm-10">
            <input type="text" id="department" name="department" class="form-control" value="{{department}}">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="city" class ="col-sm-2 col-form-label">City</label>
        <div class="col-sm-10">
            <input type="text" id="city" name="city" class="form-control" value="{{city}}">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="country" class ="col-sm-2 col-form-label">Country</label>
        <div class="col-sm-10">
            <input type="text" id="country" name="country" class="form-control" value="{{country}}">
        </div>
    </div>
    

    <div class="form-group row form-action">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>
    </form>
</div>
</div>
  </div>
</div>
