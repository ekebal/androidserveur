<div class="container-fluid form-horizontal">
 <div class="col-lg-12">
    <div class="card">
      <div class="card-title">
        <h4>
          IdeaAnswer - List Form</h4>
        <a class="btn btn-primary btn-sm float-right" href="/ideaanswer/create">Create New</a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                                  <th>
                    Id
                  </th>
                                    <th>
                    Answer Date
                  </th>
                                      <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each entities}}
              <tr>
                                  <td>
                                          {{_
                      id}}
                                          </td>
                                    <td>
                                              {{
                          answerDate}}
                                              </td>
                                      <td>
                      <a class="btn btn-info btn-sm" href="/ideaanswer/details/{{_id}}">Details</a>
                      <a class="btn btn-warning btn-sm" href="/ideaanswer/edit/{{_id}}">Edit</a>
                      <a class="btn btn-danger btn-sm" href="/ideaanswer/delete/{{_id}}">Delete</a>
                    </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
 </div>
</div>