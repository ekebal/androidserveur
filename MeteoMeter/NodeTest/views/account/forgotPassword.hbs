  <div class="form-group">
    <div class="cil-md-offset-2 col-md-10">
      <label for="username">Email:</label>
      <input id="email" name="email" type="email">
    </div>
  </div>  
  <div class="form-group">
    <div class="cil-md-offset-2 col-md-10">
      <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
  </div>
</form>
