<div class="container-fluid form-horizontal">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-title">
                <h4>User Delete</h4>
            </div>
            <div class="card-body">
                <h3>Are you sure you want to delete this?</h3>
                <div class="row">
                    <label for="firstname" class = "col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10 label-detail">
                        {{username}}
                    </div>
                </div>
                <div class="row">
                    <label for="firstname" class = "col-sm-2 col-form-label">First name</label>
                    <div class="col-sm-10 label-detail">
                        {{firstName}}
                    </div>
                </div>
                <div class="row">
                    <label for="firstname" class = "col-sm-2 col-form-label">Last name</label>
                    <div class="col-sm-10 label-detail">
                        {{lastName}}
                    </div>
                </div>
                <div class="row form-action">
                    <div class="col-sm-10">
                        <form action="/user/delete/{{_id}}" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            <!-- <a href="/user/index">Back to List</a> -->
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
