<div class="container-fluid form-horizontal">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-title">
        <h4>User Details</h4>
      </div>
      <div class="card-body">
        <div class="row">
            <label for="firstname" class = "col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10 label-detail">
              {{username}}
            </div>
        </div>
        <div class="row">
            <label for="firstname" class = "col-sm-2 col-form-label">First name</label>
            <div class="col-sm-10 label-detail">
              {{firstName}}
            </div>
        </div>
        <div class="row">
            <label for="firstname" class = "col-sm-2 col-form-label">Last name</label>
            <div class="col-sm-10 label-detail">
              {{lastName}}
            </div>
        </div>
        <div class="row form-action">
          <div class="col-sm-10">
            <!-- <a href="/user/index">Back to List</a> -->
            <a class="btn btn-primary btn-sm" href="/user/edit/{{_id}}">Edit</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
