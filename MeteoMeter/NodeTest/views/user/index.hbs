<div class="container-fluid form-horizontal">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-title">
        <h4>User List</h4>
        <a class="btn btn-primary btn-sm float-right" href="/user/create">Create New</a>
      </div>
      <div class="card-body">

        <div class="table-responsive">
          <table class="table table-hover">
              <thead>
                  <tr>
                      <th>Username</th>
                      <th>First name</th>
                      <th>Last name</th>
                      <th>Action</th>
                  </tr>
              </thead>
              <tbody>
                  {{#each entities}}
                  <tr>
                      <td>{{username}}</td>
                      <td>{{firstName}}</td>
                      <td>{{lastName}}</td>
                      <td>
                          <a class="btn btn-info btn-sm" href="/user/details/{{_id}}">Details</a>
                          <a class="btn btn-warning btn-sm" href="/user/edit/{{_id}}">Edit</a>
                          <a class="btn btn-danger btn-sm" href="/user/delete/{{_id}}">Delete</a>
                      </td>
                  </tr>
                  {{/each}}
              </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>
